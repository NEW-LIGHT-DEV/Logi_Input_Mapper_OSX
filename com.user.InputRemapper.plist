<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.InputRemapper</string>

    <key>ProgramArguments</key>
    <array>
        <string>__INSTALL_DIR__/InputRemapper.app/Contents/MacOS/InputRemapper</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/input-remapper.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/input-remapper.err</string>

    <key>ProcessType</key>
    <string>Interactive</string>
</dict>
</plist>
